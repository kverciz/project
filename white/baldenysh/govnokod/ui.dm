/atom/movable/screen/verbbutton/ui_data(mob/user)
	var/list/data = list()
	data["verbs"] = list()

	for(var/verb_item in user.get_all_verbs())
		if(!verb_item:hidden && verb_item:category && (verb_item:category in allowed_categories))
